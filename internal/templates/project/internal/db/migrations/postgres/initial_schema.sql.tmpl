--
-- Conventions established:
-- - UUIDv7 TEXT columns for primary keys
-- - TIMESTAMPTZ columns with NOW() defaults
-- - BEFORE UPDATE triggers for updated_at columns

CREATE OR REPLACE FUNCTION update_updated_at_column()
RETURNS TRIGGER AS $$
BEGIN
    NEW.updated_at = NOW();
    RETURN NEW;
END;
$$ LANGUAGE plpgsql;

