package http

import (
	"net/http"

	"github.com/go-chi/chi/v5"
	"github.com/go-chi/chi/v5/middleware"
	"{{.ModuleName}}/internal/http/handlers"
	httpmiddleware "{{.ModuleName}}/internal/http/middleware"
	"{{.ModuleName}}/internal/http/routes"
)

func (s *Server) routes() {
	s.router.Use(middleware.RequestID)
	s.router.Use(httpmiddleware.NewRequestLogger(s.logger))
	s.router.Use(middleware.RealIP)
	s.router.Use(httpmiddleware.NewRecoverer(s.logger))

	// TRACKS:API_ROUTES:BEGIN
	s.router.Get(routes.APIHealth, s.handleHealthCheck())
	// TRACKS:API_ROUTES:END

	// TRACKS:WEB_ROUTES:BEGIN
	s.router.Get(routes.Home, s.handleHome())
	s.router.Get(routes.About, s.handleAbout())
	// TRACKS:WEB_ROUTES:END

	s.router.Group(func(r chi.Router) {
		// r.Use(middleware.RequireAuth) // Add auth middleware when ready

		// TRACKS:PROTECTED_ROUTES:BEGIN
		// TRACKS:PROTECTED_ROUTES:END
	})

	s.router.NotFound(s.handleError())
}

func (s *Server) handleHealthCheck() http.HandlerFunc {
	handler := handlers.NewHealthHandler(s.healthService, s.logger)
	return handler.Check
}

func (s *Server) handleHome() http.HandlerFunc {
	handler := handlers.NewHomeHandler(s.logger)
	return handler.ServeHTTP
}

func (s *Server) handleAbout() http.HandlerFunc {
	handler := handlers.NewAboutHandler(s.logger)
	return handler.ServeHTTP
}

func (s *Server) handleError() http.HandlerFunc {
	handler := handlers.NewErrorHandler(s.logger)
	return handler.ServeHTTP
}
