package components

type FooterProps struct {
	Year         int
	ProjectName  string
	ProjectURL   string
	ShowTracksCredit bool
}

templ Footer(props FooterProps) {
	<footer class="footer">
		<div class="footer-content">
			<div class="footer-section">
				<p>&copy; { fmt.Sprintf("%d", props.Year) } { props.ProjectName }. All rights reserved.</p>
			</div>
			<nav class="footer-nav">
				<ul class="footer-links">
					<li><a href="/">Home</a></li>
					<li><a href="/about">About</a></li>
					if props.ProjectURL != "" {
						<li><a href={ templ.URL(props.ProjectURL) } target="_blank" rel="noopener noreferrer">Project</a></li>
					}
				</ul>
			</nav>
			if props.ShowTracksCredit {
				<div class="footer-credit">
					<p>Built with <a href="https://go-tracks.io" target="_blank" rel="noopener noreferrer">Tracks</a></p>
				</div>
			}
		</div>
	</footer>
}
