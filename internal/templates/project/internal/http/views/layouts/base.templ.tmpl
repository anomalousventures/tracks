package layouts

import (
	"{{.ModuleName}}/internal/http/views/components"
	"{{.ModuleName}}/internal/http/routes"
)

templ Base(title, description string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<meta name="description" content={ description }/>
		</head>
		<body>
			@components.Nav(components.NavProps{
				Logo: "{{.ProjectName}}",
				Links: []components.NavLink{
					{Label: "Home", Href: routes.WebHome, Active: false},
					{Label: "About", Href: routes.WebAbout, Active: false},
				},
				DarkMode: false,
				MobileNav: false,
			})
			{ children... }
		</body>
	</html>
}
