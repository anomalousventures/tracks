package layouts

import (
	"time"

	"{{.ModuleName}}/internal/http/routes"
	"{{.ModuleName}}/internal/http/views/components"
)

templ Base(title, description string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<meta name="description" content={ description }/>
			<link rel="stylesheet" href="/assets/css/app.css"/>
			@components.HTMXConfig()
			<script src="/assets/js/app.js" nonce={ templ.GetNonce(ctx) } defer></script>
		</head>
		<body>
			@components.Nav(components.NavProps{
				Logo: "{{.ProjectName}}",
				Links: []components.NavLink{
					{Label: "Home", Href: routes.Home, Active: false},
					{Label: "About", Href: routes.About, Active: false},
				},
				DarkMode: false,
				MobileNav: false,
			})
			<main id="content">
				{ children... }
			</main>
			@components.Footer(components.FooterProps{
				Year:             time.Now().Year(),
				ProjectName:      "{{.ProjectName}}",
				ShowTracksCredit: true,
			})
		</body>
	</html>
}
