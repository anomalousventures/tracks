package http

import (
	"context"
	"fmt"
	"net/http"
	"os"
	"os/signal"

	"github.com/go-chi/chi/v5"

	"{{.ModuleName}}/internal/config"
	"{{.ModuleName}}/internal/interfaces"
)

type Server struct {
	router chi.Router
	config *config.ServerConfig
	logger interfaces.Logger

	healthService interfaces.HealthService
}

func NewServer(cfg *config.ServerConfig, logger interfaces.Logger) *Server {
	return &Server{
		router: chi.NewRouter(),
		config: cfg,
		logger: logger,
	}
}

func (s *Server) WithHealthService(svc interfaces.HealthService) *Server {
	s.healthService = svc
	return s
}

func (s *Server) RegisterRoutes() *Server {
	s.routes()
	return s
}

func (s *Server) ServeHTTP(w http.ResponseWriter, r *http.Request) {
	s.router.ServeHTTP(w, r)
}

func (s *Server) ListenAndServe() error {
	srv := &http.Server{
		Addr:         s.config.Port,
		Handler:      s,
		ReadTimeout:  s.config.ReadTimeout,
		WriteTimeout: s.config.WriteTimeout,
		IdleTimeout:  s.config.IdleTimeout,
	}

	ctx := context.Background()
	s.logger.Info(ctx).Str("addr", s.config.Port).Msg("server listening")

	serverErr := make(chan error, 1)

	go func() {
		if err := srv.ListenAndServe(); err != nil && err != http.ErrServerClosed {
			serverErr <- err
		}
	}()

	quit := make(chan os.Signal, 1)
	signal.Notify(quit, os.Interrupt)

	select {
	case <-quit:
		s.logger.Info(ctx).Msg("shutting down server")
	case err := <-serverErr:
		return fmt.Errorf("failed to start server: %w", err)
	}

	shutdownCtx, cancel := context.WithTimeout(context.Background(), s.config.ShutdownTimeout)
	defer cancel()

	if err := srv.Shutdown(shutdownCtx); err != nil {
		s.logger.Error(ctx).Err(err).Msg("server shutdown failed")
		return err
	}

	s.logger.Info(ctx).Msg("server shutdown complete")
	return nil
}
