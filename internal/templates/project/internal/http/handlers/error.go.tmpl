package handlers

import (
	"net/http"

	"{{.ModuleName}}/internal/http/helpers"
	"{{.ModuleName}}/internal/interfaces"
)

type ErrorHandler struct {
	logger interfaces.Logger
}

func NewErrorHandler(logger interfaces.Logger) *ErrorHandler {
	return &ErrorHandler{
		logger: logger,
	}
}

// ServeHTTP renders a 404 Not Found error page.
// This handler is typically used as a catch-all route for unmatched paths.
func (h *ErrorHandler) ServeHTTP(w http.ResponseWriter, r *http.Request) {
	helpers.RenderError(w, r, http.StatusNotFound, "Page not found", h.logger)
}
