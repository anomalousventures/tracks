package handlers

import (
	"encoding/json"
	"net/http"

	"github.com/rs/zerolog"
	"{{.ModuleName}}/internal/interfaces"
	"{{.ModuleName}}/internal/logging"
)

type HealthHandler struct {
	healthService interfaces.HealthService
	logger        *zerolog.Logger
}

func NewHealthHandler(svc interfaces.HealthService, logger *zerolog.Logger) *HealthHandler {
	return &HealthHandler{
		healthService: svc,
		logger:        logger,
	}
}

func (h *HealthHandler) Check(w http.ResponseWriter, r *http.Request) {
	ctx := r.Context()
	status := h.healthService.Check(ctx)

	w.Header().Set("Content-Type", "application/json")
	if err := json.NewEncoder(w).Encode(status); err != nil {
		logging.Error(ctx).Err(err).Msg("failed to encode health check response")
		http.Error(w, "Failed to encode response", http.StatusInternalServerError)
		return
	}
}
