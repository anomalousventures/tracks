# SQLC configuration for type-safe database code generation
# Docs: https://docs.sqlc.dev/en/latest/reference/config.html

version: "2"
sql:
  - schema: "internal/db/migrations/{{if eq .DBDriver "postgres"}}postgres{{else}}sqlite{{end}}"
    queries: "internal/db/queries"
    engine: "{{if eq .DBDriver "postgres"}}postgresql{{else}}sqlite{{end}}"
    gen:
      go:
        package: "generated"
        out: "internal/db/generated"
        sql_package: "database/sql"
        emit_json_tags: true
        emit_interface: true
        emit_empty_slices: true
        overrides:
          - db_type: "TEXT"
            go_type: "string"
            nullable: false
