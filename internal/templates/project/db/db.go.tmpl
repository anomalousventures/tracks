package db

import (
	"database/sql"
	"fmt"

{{- if eq .DBDriver "go-libsql"}}
	_ "github.com/tursodatabase/libsql-client-go/libsql"
{{- else if eq .DBDriver "sqlite3"}}
	_ "github.com/mattn/go-sqlite3"
{{- else if eq .DBDriver "postgres"}}
	_ "github.com/lib/pq"
{{- end}}
)

// New creates a new database connection using the provided DSN.
// It verifies the connection is working by calling Ping before returning.
func New(dsn string) (*sql.DB, error) {
{{- if eq .DBDriver "go-libsql"}}
	db, err := sql.Open("libsql", dsn)
{{- else if eq .DBDriver "sqlite3"}}
	db, err := sql.Open("sqlite3", dsn)
{{- else if eq .DBDriver "postgres"}}
	db, err := sql.Open("postgres", dsn)
{{- end}}
	if err != nil {
		return nil, fmt.Errorf("open database: %w", err)
	}

	if err := db.Ping(); err != nil {
		return nil, fmt.Errorf("ping database: %w", err)
	}

	return db, nil
}
