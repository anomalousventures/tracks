# Application configuration for {{.ProjectName}}
# Environment variables take precedence over values in this file

app:
  environment: development
  log_level: debug

server:
  port: 8080
  host: localhost
  read_timeout: 10s
  write_timeout: 10s
  idle_timeout: 120s

database:
  driver: {{.DBDriver}}
{{- if eq .DBDriver "go-libsql"}}
  connection: ${DATABASE_URL:-file:./{{.ProjectName}}.db}
  max_connections: 10  # File-based databases work better with lower concurrency
  max_idle_connections: 2
{{- else if eq .DBDriver "sqlite3"}}
  connection: ${DATABASE_URL:-./{{.ProjectName}}.db}
  max_connections: 10  # File-based databases work better with lower concurrency
  max_idle_connections: 2
{{- else if eq .DBDriver "postgres"}}
  connection: ${DATABASE_URL:-postgres://localhost/{{.ProjectName}}?sslmode=disable}  # sslmode=disable is safe for local development only
  max_connections: 25
  max_idle_connections: 5
{{- end}}

session:
  lifetime: 24h
  cookie_name: session_id
  cookie_secure: false  # WARNING: Set to true in production to require HTTPS
  cookie_http_only: true
  cookie_same_site: lax
