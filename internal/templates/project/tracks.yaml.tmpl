# Application configuration for {{.ProjectName}}
# Environment variables take precedence over values in this file
# Use APP_ prefix for environment variables (e.g. APP_SERVER_PORT, APP_LOGGING_LEVEL)

environment: development

server:
  port: ":8080"
  read_timeout: 15s
  write_timeout: 15s
  idle_timeout: 60s
  shutdown_timeout: 30s

logging:
  level: info
  format: json

database:
{{- if eq .DBDriver "go-libsql"}}
  url: ${DATABASE_URL:-file:./{{.ProjectName}}.db}
{{- else if eq .DBDriver "sqlite3"}}
  url: ${DATABASE_URL:-./{{.ProjectName}}.db}
{{- else if eq .DBDriver "postgres"}}
  url: ${DATABASE_URL:-postgres://localhost/{{.ProjectName}}?sslmode=disable}
{{- end}}

session:
  lifetime: 24h
  cookie_name: session_id
  cookie_secure: false  # WARNING: Set to true in production to require HTTPS
  cookie_http_only: true
  cookie_same_site: lax
