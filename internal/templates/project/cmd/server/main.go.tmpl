package main

import (
	"context"
	"fmt"
	"os"

	"{{.ModuleName}}/db"
	"{{.ModuleName}}/internal/config"
	"{{.ModuleName}}/internal/domain/health"
	"{{.ModuleName}}/internal/http"
	"{{.ModuleName}}/internal/logging"
)

func main() {
	if err := run(); err != nil {
		fmt.Fprintf(os.Stderr, "error: %v\n", err)
		os.Exit(1)
	}
}

func run() error {
	cfg, err := config.Load()
	if err != nil {
		return fmt.Errorf("load config: %w", err)
	}

	logger := logging.NewLogger(cfg.Environment)

	ctx := context.Background()
	logger.Info(ctx).Msg("server starting")

	// TRACKS:DB:BEGIN
	database, err := db.New(ctx, cfg.Database)
	if err != nil {
		return fmt.Errorf("connect to database: %w", err)
	}
	defer database.Close()
	// TRACKS:DB:END

	// TRACKS:REPOSITORIES:BEGIN
	// TRACKS:REPOSITORIES:END

	// TRACKS:SERVICES:BEGIN
	healthService := health.NewService()
	// TRACKS:SERVICES:END

	srv := http.NewServer(&cfg.Server, logger).
		WithHealthService(healthService).
		RegisterRoutes()

	return srv.ListenAndServe()
}
