package assets

import (
	"embed"
	"io/fs"
	"net/http"
)

//go:embed all:static
var staticFS embed.FS

func FileSystem() http.FileSystem {
	stripped, err := fs.Sub(staticFS, "static")
	// Panic is acceptable at startup: error indicates corrupt binary
	// which should be caught during testing, never occur in production
	if err != nil {
		panic("failed to create assets filesystem: " + err.Error())
	}
	return http.FS(stripped)
}
