version: "2"

linters:
  enable:
    - errcheck
    - govet
    - staticcheck
    - unused
    - ineffassign
    - contextcheck

  settings:
    errcheck:
      check-blank: true

formatters:
  enable:
    - gofmt
    - goimports

issues:
  exclude-dirs:
    - tests/mocks
    - internal/db/generated
  exclude-files:
    - ".*_templ\\.go$"
  max-issues-per-linter: 0
  max-same-issues: 0

run:
  timeout: 5m
  tests: true
