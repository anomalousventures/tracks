linters:
  disable-all: true
  enable:
    - errcheck
    - govet
    - staticcheck
    - unused
    - gosimple
    - ineffassign
    - contextcheck
    - gofmt
    - goimports

linters-settings:
  errcheck:
    check-blank: true

issues:
  exclude-dirs:
    - test/mocks
    - db/generated
  exclude-files:
    - ".*_templ\\.go$"
  max-issues-per-linter: 0
  max-same-issues: 0

run:
  timeout: 5m
  tests: true
