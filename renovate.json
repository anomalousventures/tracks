{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "before 10am on Monday"
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "pin",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on Monday"]
  },
  "packageRules": [
    {
      "description": "Group all Docusaurus packages together",
      "groupName": "Docusaurus",
      "matchPackagePrefixes": ["@docusaurus/"],
      "labels": ["dependencies", "docusaurus"]
    },
    {
      "description": "Group React packages together",
      "groupName": "React",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"],
      "labels": ["dependencies", "react"]
    },
    {
      "description": "Auto-merge patch and minor updates for devDependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "automerge"]
    },
    {
      "description": "Auto-merge patch updates for dependencies",
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "automerge"]
    },
    {
      "description": "Label and require approval for major updates",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update"],
      "automerge": false
    },
    {
      "description": "Group Go tool dependencies",
      "groupName": "Go development tools",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["tool"],
      "labels": ["dependencies", "go", "tools"],
      "schedule": ["before 10am on Monday"]
    },
    {
      "description": "Group Go standard dependencies",
      "groupName": "Go dependencies",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["require"],
      "labels": ["dependencies", "go"],
      "schedule": ["before 10am on Monday"]
    },
    {
      "description": "Pin pnpm version",
      "matchPackageNames": ["pnpm"],
      "matchManagers": ["npm"],
      "rangeStrategy": "pin",
      "labels": ["dependencies", "pnpm"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "prTitle": "{{commitMessagePrefix}} {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "prBodyColumns": ["Package", "Change", "Age", "Adoption", "Passing", "Confidence"]
}
